### Database (MySQL)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=ttv
MYSQL_PORT=3306

### App
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173
JWT_SECRET=change_this_in_prod
SESSION_EXPIRY=7d

### Email (SMTP) - used for verification, notifications, receipts
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
DEFAULT_FROM_EMAIL="The Trucking Vault <noreply@example.com>"

### SMS (Twilio recommended) - used for OTP/mobile verification
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE=+15551234567

### Payments - Stripe primary (add PayPal / Square if needed)
PAYMENTS_PROVIDER=stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYMENTS_CURRENCY=usd

### File storage (document uploads) - local by default, S3 optional
STORAGE_PROVIDER=local # or s3
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

### 3rd party finance / lending (optional)
FINANCE_PROVIDER=
FINANCE_API_KEY=

### Misc / integrations
ADMIN_EMAIL=admin@example.com
ANALYTICS_ENABLED=false

# Security / compliance flags
ENABLE_DOCUMENT_EXPIRY_NOTIFICATIONS=true
